<div class="ui main text container">
  <% if !@meetup_name.blank? && !@error_response %>
    <div class="ui container">
      <h1 class="ui center aligned header">Similar sponsors for <%= @meetup_name %></h1>
    </div>
    <div class="ui container">
      <% @similar_groups.each do |name, info| %>
        <h2 class="ui center aligned header"><%= name %></h2>
        <div class="ui relaxed divided items">
          <% if !info['sponsors'].blank? %>
            <% info['sponsors'].each do |sponsor| %>
              <div class="item">
                <div class="ui small image">
                  <img src="<%= sponsor['image_url'] %>" >
                </div>
                <div class="content">
                  <h4 class="header"><%= sponsor['name'] %></h4>
                  <div class="description"><%= sponsor['info'] %></div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div>No sponsors found.</div>  
          <% end %>
        </div>
      <% end %>
    </div> 
  <% else %>
  <p>
    Sorry, we couldn't find similar sponsors at the moment.
    Please try again later or with a different link name.
  </p>
  <button onclick="window.history.back()" class="ui large teal button" >Go Back</button>
  <% end %>
</div>